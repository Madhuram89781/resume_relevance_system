{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "env": {
    "SECRET_KEY": "your_secret_key_here",
    "MAX_CONTENT_LENGTH": "16777216",
    "UPLOAD_FOLDER": "/tmp/uploads"
  },
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  }
}